<Window x:Class="WpfAppProject.MainWindow"
        xmlns:TabPagePlan="clr-namespace:WpfAppProject.ControlElements.SectionPlan" 
        xmlns:TabPageSchedule="clr-namespace:WpfAppProject.ControlElements.SectionSchedule" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProject"
        mc:Ignorable="d"
        Title="MainWindow" 
        d:DesignWidth="1280" d:DesignHeight="1024"
        MinWidth="720" MinHeight="720"
        WindowState="Maximized" >
    <Grid>
        <TabControl TabStripPlacement="Bottom" Padding="0" BorderThickness="0">
            <TabItem Header="Расписание">
                <TabPageSchedule:TabItemSchedule />
            </TabItem>

            <TabItem Header="Календарь">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="Нагрузка">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem Header="План">
                <TabPagePlan:TabItemPlan/>
            </TabItem>

            <TabItem Header="Прочее">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
